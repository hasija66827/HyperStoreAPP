<Page x:Class="SDKTemplate.SignUp.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SDKTemplate.SignUp"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <RelativePanel Background="White"
                   HorizontalAlignment="Center">
        <TextBlock x:Name="HeaderTB"
                   Text="Create your Hyper Store Account"
                   FontSize="40"
                   Margin="0,20"
                   FontFamily="Arial"
                   Foreground="Black"
                   FontWeight="ExtraLight"
                   RelativePanel.AlignHorizontalCenterWithPanel="True" />
        <Frame x:Name="HeaderFrame"
               Width="700"
               Height="80"
               Background="{StaticResource FormThemeBrush}"
               RelativePanel.Below="HeaderTB" />
        <Rectangle RelativePanel.Below="HeaderFrame"
                   Stroke="LightGray"
                   RelativePanel.AlignRightWith="HeaderFrame"
                   RelativePanel.AlignLeftWith="HeaderFrame"
                   Height=".5" />
        <Frame x:Name="ContentFrame"
               Height="620"
               Background="{StaticResource FormThemeBrush}"
               RelativePanel.AlignRightWith="HeaderFrame"
               RelativePanel.AlignLeftWith="HeaderFrame"
               RelativePanel.Below="HeaderFrame" />
        <Frame x:Name="ResultFrame"
               Width="500"
               Height="570"
               Margin="40,10"
               Background="{StaticResource FormThemeBrush}"
               RelativePanel.AlignVerticalCenterWith="ContentFrame"
               RelativePanel.RightOf="HeaderFrame" />
    </RelativePanel>
</Page>
