<Page x:Class="SDKTemplate.SignUp.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SDKTemplate.SignUp"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <RelativePanel Background="White"
                   HorizontalAlignment="Center">
        <Frame x:Name="HeaderFrame"
               Width="700"
               Height="50"
               Background="#FFE9EDED"
               BorderBrush="LightGray"
               BorderThickness="1"
               Margin="0,60,60,0"/>
        <Frame x:Name="ContentFrame"
               Width="700"
               Height="600"
               Background="#FFE9EDED"
               RelativePanel.AlignLeftWith="HeaderFrame"
               RelativePanel.Below="HeaderFrame" />
        <Frame x:Name="ResultFrame"
               Width="700"
               Height="650"
               Background="#FFE9EDED"
               RelativePanel.AlignBottomWith="ContentFrame"
               RelativePanel.RightOf="HeaderFrame" />
    </RelativePanel>
</Page>
