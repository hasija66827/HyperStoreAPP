<Page x:Class="SDKTemplate.TagCC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SDKTemplate"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Grid>
        <Grid.DataContext>
            <local:TagCCF />
        </Grid.DataContext>
        <RelativePanel Background="AliceBlue">
            <Border  x:Name="HeaderPanel"
                     RelativePanel.AlignTopWithPanel="True"
                     Style="{StaticResource HeaderBorder}">
                <TextBlock Text="Tag"
                           Style="{StaticResource HeaderTextBlockStyle}" />
            </Border>
            <StackPanel x:Name="ContentPanel"
                        Orientation="Vertical"
                        RelativePanel.Below="HeaderPanel"
                        Margin="10,0,0,0">
                <TextBox Width="300"
                         FontSize="16"
                         Margin="0,10,0,10"
                         Text="{Binding Header, Mode=TwoWay}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         MaxHeight="200" />
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              MaxHeight="150"
                              Width="300">
                    <ItemsControl ItemsSource="{Binding Tags}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding TagName}"
                                          FontSize="14"
                                          Foreground="Black"
                                          IsChecked="{Binding Path=IsChecked, Mode=TwoWay}"
                                          IsThreeState="False" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
            <Button Content="Save"
                    x:Name="SaveBtn"
                    Style="{StaticResource FormButtonStyle}"
                    RelativePanel.AlignBottomWithPanel="True"
                    Click="SaveBtn_Click"
                    Width="305" />
        </RelativePanel>
    </Grid>
</Page>
