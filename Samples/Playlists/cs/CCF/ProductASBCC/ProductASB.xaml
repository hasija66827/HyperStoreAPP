<Page x:Class="SDKTemplate.ProductASBCustomCC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SDKTemplate"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <RelativePanel Margin="10,0,0,0">
        <TextBlock x:Name="Header"
                   Text="Add The product"
                   Margin="0,0,0,20"
                   Style="{StaticResource SampleHeaderTextStyle}" />
        <AutoSuggestBox x:Name="ProductASB"
                        PlaceholderText="Search for Product (e.g. 1111 or Maggi)"
                        DisplayMemberPath="Product_Id_Name"
                        TextChanged="ProductASB_TextChanged"
                        QueryIcon="Find"
                        QuerySubmitted="ProductASB_QuerySubmitted"
                        MinWidth="250"
                        TextMemberPath="Product_Id_Name"
                        Width="300"
                        RelativePanel.Below="Header"
                        RelativePanel.AlignLeftWith="Header" />
        <TextBlock x:Name="NoResults"
                   Text="No results found"
                   Style="{StaticResource BodyTextBlockStyle}"
                   RelativePanel.AlignBottomWith="ProductASB"
                   RelativePanel.RightOf="ProductASB"
                   Visibility="Collapsed" />
        <RelativePanel x:Name="ProductDetails"
                       Visibility="Collapsed"
                       Height="80"
                       Margin="60,0,0,0"
                       RelativePanel.AlignBottomWith="ProductASB"
                       RelativePanel.RightOf="ProductASB">
            <Ellipse x:Name="ProductBackground"
                     Height="48"
                     Width="48"
                     Margin="0,16,0,8"
                     Fill="#99797A05" />
            <TextBlock x:Name="ProductGlyph"
                       Text="RH"
                       FontSize="20"
                       Margin="0,8,0,8"
                       RelativePanel.AlignHorizontalCenterWith="ProductBackground"
                       RelativePanel.AlignVerticalCenterWith="ProductBackground"
                       Foreground="#FFFCFCFC"
                       SelectionHighlightColor="#FFE8EEEE" />
            <TextBlock x:Name="ProductId"
                       Style="{StaticResource BaseTextBlockStyle}"
                       Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                       RelativePanel.RightOf="ProductBackground"
                       Margin="12,11,12,0" />
            <TextBlock x:Name="ProductName"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource SystemControlForegroundBaseHighBrush}"
                       RelativePanel.Below="ProductId"
                       RelativePanel.AlignLeftWith="ProductId"
                       Margin="12,0" />
            <TextBlock x:Name="ProductSellingPrice"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                       RelativePanel.Below="ProductName"
                       RelativePanel.AlignLeftWith="ProductName"
                       Margin="12,0" />
            <TextBlock x:Name="ProductCostPrice"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                       RelativePanel.Below="ProductName"
                       RelativePanel.RightOf="ProductSellingPrice"
                       Margin="6,0" />
            <Line Stretch="Fill"
                  Stroke="Gray"
                  StrokeThickness="1"
                  X1="1"
                  Width="30"
                  RelativePanel.AlignHorizontalCenterWith="ProductCostPrice"
                  RelativePanel.AlignVerticalCenterWith="ProductCostPrice" />
            <TextBlock x:Name="ProductDiscountPer"
                       Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                       RelativePanel.Below="ProductName"
                       RelativePanel.RightOf="ProductCostPrice"
                       Margin="6,0" />
            <Button x:Name="AddToCartBtn"
                    Content="Add To Cart"
                    Height="40"
                    Width="100"
                    RelativePanel.AlignBottomWith="ProductDiscountPer"
                    RelativePanel.RightOf="ProductDiscountPer"
                    Margin="6,0" />
        </RelativePanel>
    </RelativePanel>
</Page>
