<Page x:Class="SDKTemplate.CustomerASBCC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SDKTemplate"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Grid>
        <RelativePanel Background="AliceBlue">
            <Border  x:Name="HeaderPanel"
                     RelativePanel.AlignTopWithPanel="True"
                     Style="{StaticResource HeaderBorder}">
                <TextBlock Text="Search By Customer"
                           Style="{StaticResource HeaderTextBlockStyle}" />
            </Border>
            <StackPanel Orientation="Vertical"
                        RelativePanel.Below="HeaderPanel"
                        Margin="10,0,0,0">
                <AutoSuggestBox HorizontalAlignment="Left"
                                x:Name="CustomerASB"
                                Height="30"
                                TextMemberPath="Customer_MobileNo_Address"
                                DisplayMemberPath="Customer_MobileNo_Address"
                                PlaceholderText="Search By MobNo (e.g. 9632166827)"
                                TextChanged="CustomerASB_TextChanged"
                                QueryIcon="Find"
                                QuerySubmitted="CustomerASB_QuerySubmitted"
                                MinWidth="280"
                                Width="280"
                                RelativePanel.AlignLeftWith="HeaderPanel" />
                <TextBlock x:Name="NoResults"
                           Text="No results found"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Visibility="Collapsed"
                           RelativePanel.AlignLeftWith="CustomerASB"
                           RelativePanel.Below="CustomerASB" />
                <RelativePanel x:Name="CustomerDetails"
                               Visibility="Collapsed"
                               Height="120"
                               Margin="10,20,0,0"
                               RelativePanel.Below="CustomerASB">
                    <Ellipse x:Name="CustomerBackground"
                             Height="48"
                             Width="48"
                             Margin="0,16,0,8"
                             Fill="#FF830D0D" />
                    <TextBlock x:Name="CustomerGlyph"
                               Text="RH"
                               FontSize="20"
                               Margin="0,8,0,8"
                               RelativePanel.AlignHorizontalCenterWith="CustomerBackground"
                               RelativePanel.AlignVerticalCenterWith="CustomerBackground"
                               Foreground="#FFFCFCFC"
                               SelectionHighlightColor="#FFE8EEEE" />
                    <TextBlock x:Name="CustomerMobNo"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                               RelativePanel.RightOf="CustomerBackground"
                               Margin="12,11,12,0" />
                    <TextBlock x:Name="CustomerName"
                               Style="{StaticResource BodyTextBlockStyle}"
                               Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                               RelativePanel.Below="CustomerMobNo"
                               RelativePanel.AlignLeftWith="CustomerMobNo"
                               Margin="12,0" />
                    <TextBlock x:Name="CustomerAddress"
                               Style="{StaticResource BodyTextBlockStyle}"
                               Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                               RelativePanel.Below="CustomerName"
                               RelativePanel.AlignLeftWith="CustomerName"
                               Margin="12,0" />
                    <TextBlock x:Name="CustomerWalletBalance"
                               Text="200"
                               Foreground="{StaticResource SystemControlForegroundBaseHighBrush}"
                               RelativePanel.Below="CustomerBackground"
                               Margin="6,0" />
                </RelativePanel>
            </StackPanel>
        </RelativePanel>
    </Grid>
</Page>
