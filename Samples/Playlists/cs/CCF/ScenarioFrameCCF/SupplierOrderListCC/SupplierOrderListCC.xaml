<Page x:Class="SDKTemplate.WholeSellerOrderCC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SDKTemplate"
      xmlns:viewmodel="using:SDKTemplate.View_Models"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Page.Resources>
        <local:FloatToRupeeConverter x:Key="FloatToRupeeConverter" />
        <DataTemplate x:Key="MasterListViewItemTemplate"
                      x:DataType="local:SupplierOrderViewModel">
            <RelativePanel>
                <TextBlock x:Name="MobileNo"
                           Text="{x:Bind Supplier.MobileNo}"
                           Style="{ThemeResource MasterListTextBlockStyle}" />
                <TextBlock x:Name="WholeSellerOrderNo"
                           RelativePanel.AlignRightWithPanel="True"
                           Text="{x:Bind SupplierOrderNo}"
                           Padding="10,10,10,5"
                           Style="{ThemeResource ListCaptionAltTextblockStyle}" />
                <TextBlock x:Name="FormattedPaidBillAmount"
                           Text="{x:Bind FormattedPaidBillAmount}"
                           Padding="10,0,10,10"
                           RelativePanel.Below="MobileNo"
                           Style="{ThemeResource ListCaptionAltTextblockStyle}" />
                <TextBlock x:Name="FormattedOrderDate"
                           Text="{x:Bind FormattedOrderDate}"
                           RelativePanel.AlignBottomWith="FormattedPaidBillAmount"
                           Padding="10,0,10,10"
                           Style="{ThemeResource ListCaptionAltTextblockStyle}"
                           RelativePanel.AlignRightWithPanel="True" />
            </RelativePanel>
        </DataTemplate>
        <DataTemplate x:Key="DetailContentTemplate"
                      x:DataType="local:SupplierOrderViewModel">
            <StackPanel>
                <StackPanel x:Name="StaticLabelsForList"
                            Style="{StaticResource ListHeaderStackPanel}">
                    <TextBlock Text="Id"
                               Style="{StaticResource LargeListTextBlockStyle}" />
                    <TextBlock Text="Product Name"
                               Style="{StaticResource LargeListTextBlockStyle}" />
                    <TextBlock Text="Purchase Price"
                               Style="{StaticResource VeryLargeListTextBlockStyle}" />
                    <TextBlock Text="Quantity"
                               Style="{StaticResource ListTextBlockStyle}" />
                    <TextBlock Text="Net Value"
                               Style="{StaticResource VeryLargeListTextBlockStyle}" />
                </StackPanel>
                <ListView x:Name="OrderDetailListView"
                          ItemsSource="{x:Bind OrderDetails}"
                          RelativePanel.Below="StaticLabelsForList"
                          RelativePanel.AlignRightWith="StaticLabelsForList"
                          RelativePanel.AlignLeftWith="StaticLabelsForList"
                          Height="300"
                          Style="{StaticResource ListViewStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:SupplierOrderProductViewModel">
                            <StackPanel Style="{StaticResource ListItemStackPanel}">
                                <TextBlock Text="{x:Bind Product.Code, Mode=OneWay}"
                                           Foreground="Black"
                                           Style="{StaticResource LargeListTextBlockStyle}" />
                                <TextBlock Text="{x:Bind Product.Name, Mode=OneWay}"
                                           Style="{StaticResource LargeListTextBlockStyle}"
                                           TextWrapping="Wrap" />
                                <TextBlock x:Name="PurchasePrice"
                                           Text="{x:Bind PurchasePrice, Mode=OneWay, Converter={StaticResource FloatToRupeeConverter }}"
                                           Foreground="Black"
                                           Style="{StaticResource VeryLargeListTextBlockStyle}" />
                                <TextBlock x:Name="Quantity"
                                           Text="{x:Bind QuantityPurchased, Mode=OneWay}"
                                           Style="{StaticResource ListTextBlockStyle}" />
                                <TextBlock x:Name="NetValue"
                                           Foreground="#FFFF2FAE"
                                           Style="{StaticResource VeryLargeListTextBlockStyle}"
                                           Text="{x:Bind NetValue, Mode=OneWay, Converter={StaticResource FloatToRupeeConverter}}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackPanel>
                    <StackPanel x:Name="StaticLabelsForTransactionList"
                                Style="{StaticResource ListHeaderStackPanel}">
                        <TextBlock Text="Txn No"
                                   Style="{StaticResource VeryLargeListTextBlockStyle}" />
                        <TextBlock Text="Txn Date"
                                   Style="{StaticResource LargeListTextBlockStyle}" />
                        <TextBlock Text="Txn Amount"
                                   Style="{StaticResource VeryLargeListTextBlockStyle}" />
                        <TextBlock Text="Credit Amount"
                                   Style="{StaticResource VeryLargeListTextBlockStyle}" />
                    </StackPanel>
                </StackPanel>
                <ListView x:Name="TransactionHistoriesOfWholeSellers"
                          ItemsSource="{x:Bind Transactions}"
                          RelativePanel.Below="TransactionHistoriesOfWholeSellers"
                          RelativePanel.AlignRightWith="StaticLabelsForList"
                          RelativePanel.AlignLeftWith="StaticLabelsForList"
                          Height="300"
                          Style="{StaticResource ListViewStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:SettledOrderOfTransactionViewModel">
                            <StackPanel Style="{StaticResource ListItemStackPanel}">
                                <TextBlock x:Name="TransactionNo"
                                           Foreground="Black"
                                           Text="{x:Bind Transaction.TransactionNo, Mode=OneWay}"
                                           Style="{StaticResource VeryLargeListTextBlockStyle}" />
                                <TextBlock x:Name="TransactionDate"
                                           Text="{x:Bind Transaction.FormattedTransactionDate, Mode=OneWay}"
                                           Style="{StaticResource LargeListTextBlockStyle}" />
                                <TextBlock x:Name="TransactionAmount"
                                           Foreground="Black"
                                           Text="{x:Bind Transaction.CreditAmount, Mode=OneWay, Converter={StaticResource FloatToRupeeConverter}}"
                                           Style="{StaticResource VeryLargeListTextBlockStyle}" />
                                <TextBlock x:Name="CreditAmount"
                                           Foreground="Black"
                                           Text="{x:Bind CreditedAmountFromTransaction, Mode=OneWay, Converter={StaticResource FloatToRupeeConverter}}"
                                           Style="{ThemeResource VeryLargeListTextBlockStyle}" />
                                </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MasterColumn"
                              Width="270" />
            <ColumnDefinition x:Name="DetailColumn"
                              Width="*" />
        </Grid.ColumnDefinitions>
        <Border  x:Name="MasterHeaderPanel"
                 RelativePanel.AlignTopWithPanel="True"
                 Style="{StaticResource HeaderBorder}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Supplier Orders"
                           Style="{StaticResource MasterHeaderTextBlockStyle}" />
                <TextBlock x:Name="OrderCountTB"
                           Style="{StaticResource MasterHeaderTextBlockStyle}" />
            </StackPanel>
        </Border>
        <Border  x:Name="DetailHeaderPanel"
                 RelativePanel.AlignTopWithPanel="True"
                 Style="{StaticResource HeaderBorder}"
                 Grid.Column="1">
            <TextBlock Text="Supplier Order Details"
                       Style="{StaticResource DetailHeaderTextBlockStyle}" />
        </Border>
        <ListView x:Name="MasterListView"
                  Grid.Row="1"
                  ItemContainerTransitions="{x:Null}"
                  ItemTemplate="{StaticResource MasterListViewItemTemplate}"
                  IsItemClickEnabled="True"
                  Visibility="Visible">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <ContentPresenter x:Name="DetailContentPresenter"
                          Grid.Row="1"
                          Grid.Column="1"
                          Grid.RowSpan="2"
                          BorderThickness="10,0,0,0"
                          ContentTemplate="{StaticResource DetailContentTemplate}"
                          BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                          Content="{x:Bind MasterListView.SelectedItem, Mode=OneWay}">
            <ContentPresenter.ContentTransitions>
                <!-- Empty by default. See MasterListView_ItemClick -->
                <TransitionCollection />
            </ContentPresenter.ContentTransitions>
        </ContentPresenter>
    </Grid>
</Page>
