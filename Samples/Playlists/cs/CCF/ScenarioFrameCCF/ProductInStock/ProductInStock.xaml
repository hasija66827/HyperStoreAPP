<Page x:Class="SDKTemplate.ProductInStock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:customControl="using:UWP"
      xmlns:common="using:SDKTemplate"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition />
        </TransitionCollection>
    </Page.Transitions>
    <Page.Resources>
        <common:FloatToRupeeConverter x:Key="FloatToRupeeConverter" />
        <common:FloatToPercentageOFFConverter x:Key="FloatToPercentageOFFConverter" />
        <DataTemplate x:Key="MasterListViewItemTemplate"
                      x:DataType="common:ProductViewModelBase">
            <RelativePanel Style="{StaticResource MasterListRelativePanel}">
                <TextBlock x:Name="ProductName"
                           Text="{x:Bind Name}"
                           Style="{ThemeResource MasterListTextBlockStyle}"
                           TextWrapping="Wrap" />
                <TextBlock Text="{x:Bind TotalQuantity}"
                           RelativePanel.AlignRightWithPanel="True"
                           Style="{ThemeResource MasterListTextBlockStyle}" />
                <TextBlock Text="{x:Bind DisplayPrice, Converter={StaticResource FloatToRupeeConverter} }"
                           RelativePanel.Below="ProductName"
                           Style="{ThemeResource ListCaptionAltTextblockStyle}" />
                <TextBlock Text="{x:Bind DiscountPer, Converter={StaticResource FloatToPercentageOFFConverter}}"
                           RelativePanel.Below="ProductName"
                           RelativePanel.RightOf="ProductName"
                           Style="{ThemeResource ListCaptionAltTextblockStyle}" />
                <TextBlock Text="{x:Bind SellingPrice, Converter={StaticResource FloatToRupeeConverter}}"
                           RelativePanel.Below="ProductName"
                           RelativePanel.AlignRightWithPanel="True"
                           Style="{ThemeResource ListCaptionAltTextblockStyle}" />
            </RelativePanel>
        </DataTemplate>
        <DataTemplate x:Key="DetailContentTemplate"
                      x:DataType="common:PriceQuotedByWholeSellerCollection">
            <StackPanel>
                <StackPanel x:Name="StaticLabelsForList"
                            Style="{StaticResource ListHeaderStackPanel}">
                    <TextBlock Text="Name"
                               Style="{StaticResource VeryLargeListTextBlockStyle}" />
                    <TextBlock Text="Mobile No"
                               Style="{StaticResource VeryLargeListTextBlockStyle}" />
                    <TextBlock Text="Last Order Date"
                               Style="{StaticResource LargeListTextBlockStyle}" />
                    <TextBlock Text="Purchase Price"
                               Style="{StaticResource VeryLargeListTextBlockStyle}" />
                </StackPanel>
                <ListView x:Name="PriceListByWholeSellersListView"
                          ItemsSource="{x:Bind PriceQuotedByWholeSellers}"
                          RelativePanel.Below="StaticLabelsForList"
                          RelativePanel.AlignRightWith="StaticLabelsForList"
                          RelativePanel.AlignLeftWith="StaticLabelsForList"
                          Style="{StaticResource ListViewStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="common:PriceQuotedByWholeSellerViewModel">
                            <StackPanel Style="{StaticResource ListItemStackPanel}">
                                <RadioButton GroupName="xxx"
                                             IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                             Content="{x:Bind WholeSellerName, Mode=OneWay}"
                                             Width="150" />
                                <TextBlock x:Name="WholeSellerMobileNo"
                                           Text="{x:Bind WholeSellerMobileNo, Mode=OneWay}"
                                           Style="{StaticResource VeryLargeListTextBlockStyle}" />
                                <TextBlock x:Name="OrderDate"
                                           Text="{x:Bind FormattedOrderDate, Mode=OneWay}"
                                           Style="{StaticResource LargeListTextBlockStyle}" />
                                <TextBlock x:Name="PurchasePrice"
                                           Foreground="Black"
                                           Style="{StaticResource VeryLargeListTextBlockStyle}"
                                           Text="{x:Bind PurchasePrice, Mode=OneWay,Converter={StaticResource FloatToRupeeConverter}}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid x:Name="LayoutRoot"
          Loaded="LayoutRoot_Loaded"
          Background="White">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveStates"
                              CurrentStateChanged="AdaptiveStates_CurrentStateChanged">
                <VisualState x:Name="DefaultState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MasterColumn.Width"
                                Value="*" />
                        <Setter Target="DetailColumn.Width"
                                Value="0" />
                        <Setter Target="MasterListView.SelectionMode"
                                Value="None" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MasterColumn"
                              Width="270" />
            <ColumnDefinition x:Name="DetailColumn"
                              Width="*" />
        </Grid.ColumnDefinitions>
        <Border  x:Name="MasterHeaderPanel"
                 RelativePanel.AlignTopWithPanel="True"
                 Style="{StaticResource HeaderBorder}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Products"
                           Style="{StaticResource MasterHeaderTextBlockStyle}" />
                <TextBlock x:Name="ProductCountTB"
                           Style="{StaticResource MasterHeaderTextBlockStyle}" />
            </StackPanel>
        </Border>
        <Border  x:Name="DetailHeaderPanel"
                 RelativePanel.AlignTopWithPanel="True"
                 Style="{StaticResource HeaderBorder}"
                 Grid.Column="1">
            <TextBlock Text="Purchase History of Product"
                       Style="{StaticResource DetailHeaderTextBlockStyle}" />
        </Border>
        <ListView x:Name="MasterListView"
                  Grid.Row="1"
                  ItemContainerTransitions="{x:Null}"
                  ItemTemplate="{StaticResource MasterListViewItemTemplate}"
                  IsItemClickEnabled="True"
                  ItemClick="MasterListView_ItemClick"
                  Visibility="Visible">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <ContentPresenter x:Name="DetailContentPresenter"
                          Grid.Row="1"
                          Grid.Column="1"
                          Grid.RowSpan="3"
                          BorderThickness="10,0,0,0"
                          BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                          ContentTemplate="{StaticResource DetailContentTemplate}">
            <ContentPresenter.ContentTransitions>
                <!-- Empty by default. See MasterListView_ItemClick -->
                <TransitionCollection />
            </ContentPresenter.ContentTransitions>
        </ContentPresenter>
        <Button Content="Add To Cart"
                x:Name="AddToCartBtn"
                Grid.Row="2"
                Grid.Column="1"
                Width="450"
                Visibility="Visible"
                HorizontalAlignment="Center" />
        <Button Content="Go To Cart"
                x:Name="GoToCartBtn"
                Grid.Row="2"
                Grid.Column="1"
                Width="450"
                HorizontalAlignment="Center"
                Visibility="Collapsed" />
    </Grid>
</Page>