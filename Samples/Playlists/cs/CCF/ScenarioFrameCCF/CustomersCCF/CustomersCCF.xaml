<Page x:Class="SDKTemplate.CustomersCCF"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SDKTemplate"
      xmlns:model="using:Models"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Page.Resources>
        <local:FloatToRupeeConverter x:Key="FloatToRupeeConverter" />
        <local:FloatToRupeeConverterWithSign x:Key="FloatToRupeeConverterWithSign" />
        <DataTemplate x:Key="MasterListViewItemTemplate"
                      x:DataType="model:TCustomer">
            <RelativePanel Style="{StaticResource MasterListRelativePanel}">
                <TextBlock x:Name="MobileNo"
                           Text="{x:Bind MobileNo}"
                           Style="{ThemeResource MasterListTextBlockStyle}" />
                <TextBlock x:Name="Name"
                           Text="{x:Bind Name}"
                           Style="{ThemeResource ListCaptionAltTextblockStyle}"
                           RelativePanel.Below="MobileNo" />
                <TextBlock x:Name="WalletBalance"
                           Text="{x:Bind WalletBalance, Converter={StaticResource FloatToRupeeConverter} }"
                           Style="{ThemeResource MasterListRightTextBlockStyle}"
                           RelativePanel.AlignRightWithPanel="True"
                           RelativePanel.RightOf="MobileNo" />
            </RelativePanel>
        </DataTemplate>
        <DataTemplate x:Key="DetailContentTemplate"
                      x:DataType="local:CustomerTransactionCollection">
            <RelativePanel>
                <StackPanel x:Name="StaticLabelForList"
                            Style="{StaticResource ListHeaderStackPanel}">
                    <TextBlock Text="Txn No"
                               Style="{StaticResource ListHeaderTBStyle}" />
                    <TextBlock Text="Txn Date"
                               Style="{StaticResource ListHeaderTBStyle}" />
                    <TextBlock Text="Wallet Balance"
                               Style="{StaticResource ListHeaderTBStyle}" />
                    <TextBlock Text="Txn Amount"
                               Style="{StaticResource ListHeaderTBStyle}" />
                    <TextBlock Text="Description"
                               Style="{StaticResource ListHeaderTBStyle}" />
                </StackPanel>
                <ScrollViewer Style="{StaticResource MasterColumScrollViewer}"
                              RelativePanel.Below="StaticLabelForList"
                              RelativePanel.Above="CommandPanel">
                    <ListView x:Name="PurchaseHistoriesOfCustomer"
                              ItemsSource="{x:Bind Transactions}"
                              Style="{StaticResource ListViewStyle}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:CustomerTransactionViewModel">
                                <StackPanel Style="{StaticResource DetailListStackPanel}">
                                    <TextBlock x:Name="TransactionNo"
                                               Text="{x:Bind TransactionNo, Mode=OneWay}"
                                               Style="{StaticResource ArialBasicTBStyle}" />
                                    <TextBlock x:Name="TransactionDate"
                                               Text="{x:Bind FormattedTransactionDate, Mode=OneWay}"
                                               Style="{StaticResource CaptionBasicTBStyle}" />
                                    <TextBlock x:Name="WalletSnapshot"
                                               Text="{x:Bind WalletSnapshot, Mode=OneWay, Converter={StaticResource FloatToRupeeConverter}}"
                                               Style="{StaticResource CalibriBasicTBStyle}" />
                                    <TextBlock x:Name="TxnAmount"
                                               Foreground="{StaticResource PinkBrush}"
                                               Text="{x:Bind SignedTransactionAmount, Mode=OneWay, Converter={StaticResource FloatToRupeeConverterWithSign}}"
                                               Style="{ThemeResource CalibriBasicTBStyle}" />
                                    <TextBlock x:Name="OrderNo"
                                               Text="{x:Bind CustomerOrderNo, Mode=OneWay}"
                                               Style="{StaticResource CaptionBasicTBStyle}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
                <StackPanel x:Name="CommandPanel"
                            Orientation="Horizontal"
                            RelativePanel.AlignBottomWithPanel="True">
                    <Button x:Name="ReceiveMoney"
                            Content="{x:Bind ReceiveMoneyFromCustomer}"
                            Click="ReceiveMoney_Click"
                            Style="{StaticResource DetailButtonStyle}" />
                </StackPanel>
            </RelativePanel>
        </DataTemplate>
    </Page.Resources>
    <RelativePanel Background="{StaticResource FrameBrush}">
        <RelativePanel x:Name="MasterColumn"
                       RelativePanel.AlignBottomWithPanel="True"
                       RelativePanel.AlignTopWithPanel="True">
            <Border x:Name="MasterHeaderPanel"
                    RelativePanel.AlignTopWithPanel="True"
                    Style="{StaticResource HeaderBorder}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Customers"
                               Style="{StaticResource MasterHeaderTextBlockStyle}" />
                    <TextBlock x:Name="CustomerCountTB"
                               Style="{StaticResource ResultCountTextBlockStyle}" />
                </StackPanel>
            </Border>
            <ScrollViewer Style="{StaticResource MasterColumScrollViewer}"
                          RelativePanel.Below="MasterHeaderPanel"
                          RelativePanel.AlignBottomWithPanel="True">
                <ListView x:Name="MasterListView"
                          ItemContainerTransitions="{x:Null}"
                          ItemTemplate="{StaticResource MasterListViewItemTemplate}"
                          IsItemClickEnabled="True"
                          RightTapped="MasterListView_RightTapped"
                          ItemClick="MasterListView_ItemClick">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.Resources>
                        <MenuFlyout x:Name="CustomerMenuFlyout">
                            <MenuFlyout.Items>
                                <MenuFlyoutItem x:Name="Edit"
                                                Text="Edit"
                                                Click="Edit_Click"                                              
                                                CommandParameter="{Binding }" />
                            </MenuFlyout.Items>
                        </MenuFlyout>
                    </ListView.Resources>
                </ListView>
            </ScrollViewer>
        </RelativePanel>
        <RelativePanel x:Name="DetailColumn"
                       RelativePanel.AlignTopWithPanel="True"
                       RelativePanel.AlignBottomWithPanel="True"
                       RelativePanel.RightOf="MasterColumn"
                       Style="{StaticResource DetailColumRelativePanelStyle}">
            <Border  x:Name="DetailHeaderPanel"
                     RelativePanel.AlignTopWithPanel="True"
                     Style="{StaticResource HeaderBorder}">
                <TextBlock Text="Transactions of the Customer"
                           Style="{StaticResource DetailHeaderTextBlockStyle}" />
            </Border>
            <ContentPresenter x:Name="DetailContentPresenter"
                              RelativePanel.AlignBottomWithPanel="True"
                              RelativePanel.Below="DetailHeaderPanel"
                              ContentTemplate="{StaticResource DetailContentTemplate}">
                <ContentPresenter.ContentTransitions>
                    <!-- Empty by default. See MasterListView_ItemClick -->
                    <TransitionCollection />
                </ContentPresenter.ContentTransitions>
            </ContentPresenter>
        </RelativePanel>
    </RelativePanel>
</Page>
