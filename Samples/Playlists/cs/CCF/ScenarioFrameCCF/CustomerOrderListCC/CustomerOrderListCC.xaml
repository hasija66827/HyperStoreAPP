<Page x:Class="SDKTemplate.CustomerOrderListCCF"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SDKTemplate"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition />
        </TransitionCollection>
    </Page.Transitions>
    <Page.Resources>
        <local:FloatToRupeeConverter x:Key="FloatToRupeeConverter" />
        <local:FloatToPercentageOFFConverter x:Key="FloatToPercentageOFFConverter" />
        <DataTemplate x:Key="MasterListViewItemTemplate"
                      x:DataType="local:CustomerOrderViewModel">
            <RelativePanel>
                <TextBlock x:Name="MobileNo"
                           Text="{x:Bind CustomerMobileNo}"
                           Padding="10,10,10,5"
                           Style="{ThemeResource BaseTextBlockStyle}" />
                <TextBlock x:Name="FormattedOrderDate"
                           Padding="10,10,10,5"
                           RelativePanel.AlignRightWithPanel="True"
                           Text="{x:Bind FormattedOrderDate}"
                           Style="{ThemeResource BaseTextBlockStyle}" />
                <TextBlock x:Name="FormatterPaidBillAmount"
                           Padding="10,0,10,10"
                           RelativePanel.Below="MobileNo"
                           Text="{x:Bind FormattedPaidBillAmount}"
                           Style="{ThemeResource ListCaptionAltTextblockStyle}" />
                <TextBlock x:Name="FormattedCustomerOrderNo"
                           RelativePanel.AlignBottomWith="FormatterPaidBillAmount"
                           RelativePanel.AlignRightWithPanel="True"
                           Padding="10,0,10,10"
                           Text="{x:Bind CustomerOrderNo}"
                           Style="{ThemeResource ListCaptionAltTextblockStyle}" />
            </RelativePanel>
        </DataTemplate>
        <DataTemplate x:Key="DetailContentTemplate"
                      x:DataType="local:CustomerOrderViewModel">
            <StackPanel Margin="10,10">
                <StackPanel x:Name="StaticLabelsForList"
                            Orientation="Horizontal"
                            Margin="0,10,0,0">
                    <TextBlock Text="Id"
                               Width="60"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                    <TextBlock Text="Name"
                               Width="60"
                               Margin="0,0,10,0"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                    <TextBlock Text="Display Price"
                               Width="80"
                               Margin="0,0,10,0"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                    <TextBlock Text="Discount %"
                               Width="80"
                               Margin="0,0,10,0"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                    <TextBlock Text="Selling Price"
                               Width="80"
                               Margin="0,0,10,0"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                    <TextBlock Text="Quantity"
                               Width="60"
                               Margin="0,0,10,0"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                    <TextBlock Text="Net Value"
                               Width="70"
                               Margin="0,0,10,0"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                </StackPanel>
                <ListView x:Name="OrderDetailListView"
                          ItemsSource="{x:Bind OrderDetails}"
                          RelativePanel.Below="StaticLabelsForList"
                          Height="300"
                          CanReorderItems="False"
                          SelectedIndex="-1">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:CustomerOrderDetailViewModel">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{x:Bind BarCode,Mode=OneTime}"
                                           Width="60"
                                           Margin="0,0,0,0" />
                                <TextBlock Text="{x:Bind Name, Mode=OneTime}"
                                           Width="60"
                                           TextWrapping="Wrap"
                                           Margin="0,0,10,0" />
                                <TextBlock x:Name="DisplayPrice"
                                           Text="{x:Bind DisplayPrice, Mode=OneTime, Converter={StaticResource FloatToRupeeConverter}}"
                                           Width="80"
                                           Margin="0,0,10,0" />
                                <TextBlock x:Name="DiscountPer"
                                           Text="{x:Bind DiscountPer, Mode=OneTime, Converter={StaticResource FloatToPercentageOFFConverter}}"
                                           Width="80"
                                           Margin="0,0,10,0" />
                                <TextBlock x:Name="SellingPrice"
                                           Text="{x:Bind SellingPrice, Mode=OneTime, Converter={StaticResource FloatToRupeeConverter}}"
                                           Width="80"
                                           Margin="0,0,10,0" />
                                <TextBlock x:Name="Quantity"
                                           Text="{x:Bind QuantityPurchased, Mode=OneTime}"
                                           Width="60"
                                           Margin="0,0,10,0" />
                                <TextBlock x:Name="NetValue"
                                           Text="{x:Bind NetValue, Mode=OneTime, Converter={StaticResource FloatToRupeeConverter}}"
                                           Width="70"
                                           Margin="0,0,10,0" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid Background="White"
          x:Name="LayoutRoot"
          Loaded="LayoutRoot_Loaded">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveStates"
                              CurrentStateChanged="AdaptiveStates_CurrentStateChanged">
                <VisualState x:Name="DefaultState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MasterColumn.Width"
                                Value="*" />
                        <Setter Target="DetailColumn.Width"
                                Value="0" />
                        <Setter Target="MasterListView.SelectionMode"
                                Value="None" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MasterColumn"
                              Width="270" />
            <ColumnDefinition x:Name="DetailColumn"
                              Width="*" />
        </Grid.ColumnDefinitions>
        <Border  x:Name="MasterHeaderPanel"
                 RelativePanel.AlignTopWithPanel="True"
                 Style="{StaticResource HeaderBorder}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Customer Orders"
                           Style="{StaticResource MasterHeaderTextBlockStyle}" />
                <TextBlock x:Name="OrderCountTB"
                           Style="{StaticResource MasterHeaderTextBlockStyle}" />
            </StackPanel>
        </Border>
        <Border  x:Name="DetailHeaderPanel"
                 RelativePanel.AlignTopWithPanel="True"
                 Style="{StaticResource HeaderBorder}"
                 Grid.Column="1">
            <TextBlock Text="Order Details"
                       Style="{StaticResource MasterHeaderTextBlockStyle}" />
        </Border>
        <ListView x:Name="MasterListView"
                  Grid.Row="1"
                  ItemContainerTransitions="{x:Null}"
                  ItemTemplate="{StaticResource MasterListViewItemTemplate}"
                  IsItemClickEnabled="True"
                  ItemClick="MasterListView_ItemClick"
                  Visibility="Visible">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <ContentPresenter x:Name="DetailContentPresenter"
                          Grid.Row="1"
                          Grid.Column="1"
                          Grid.RowSpan="2"
                          BorderThickness="10,0,0,0"
                          Padding="24,0"
                          BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                          Content="{x:Bind MasterListView.SelectedItem, Mode=OneWay}"
                          ContentTemplate="{StaticResource DetailContentTemplate}">
            <ContentPresenter.ContentTransitions>
                <!-- Empty by default. See MasterListView_ItemClick -->
                <TransitionCollection />
            </ContentPresenter.ContentTransitions>
        </ContentPresenter>
    </Grid>
</Page>
