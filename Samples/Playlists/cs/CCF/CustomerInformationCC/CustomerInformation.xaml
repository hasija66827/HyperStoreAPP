<Page x:Class="SDKTemplate.CustomerInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SDKTemplate"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <RelativePanel Margin="10,0,0,0">
        <TextBlock x:Name="CustomerSummary"
                   Text="Customer Information"
                   Style="{StaticResource SampleHeaderTextStyle}"
                   Margin="0,0,0,20" />
        <StackPanel x:Name="CustomerMobileNumber"
                    Orientation="Horizontal"
                    RelativePanel.Below="CustomerSummary">
            <TextBlock x:Name="CustomerMobNoLbl"
                       Text="Customer Mobile No: "
                       Style="{StaticResource BaseTextBlockStyle}"
                       Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                       Width="150" />
            <TextBox x:Name="CustomerMobNoTB"
                     Text=""
                     Width="150"
                     Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
        </StackPanel>
        <StackPanel x:Name="CustomerName"
                    Orientation="Horizontal"
                    RelativePanel.Below="CustomerMobileNumber">
            <TextBlock x:Name="CustomerNameLbl"
                       Text="Customer Name: "
                       Style="{StaticResource BaseTextBlockStyle}"
                       Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                       Width="150" />
            <TextBlock x:Name="CustomerNameTB"
                       Text=""
                       Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    x:Name="CustomerWalletBalance"
                    RelativePanel.Below="CustomerSummary"
                    RelativePanel.RightOf="CustomerMobileNumber"
                    Margin="40,0,0,0">
            <TextBlock x:Name="CustomerWalletBalanceLbl"
                       Text="Wallet"
                       Style="{StaticResource BaseTextBlockStyle}"
                       Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                       Width="100" />
            <TextBlock x:Name="CustomerWalletBalanceTB"
                       Text="0" />
        </StackPanel>
        <StackPanel Orientation="Vertical"
                    RelativePanel.AlignBottomWith="CustomerMobileNumber"
                    RelativePanel.RightOf="CustomerMobileNumber">
            <Button x:Name="AddCustomerBtn"
                    Content="+"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Visibility="Visible" />
            <SymbolIcon x:Name="IsVerified"
                        Symbol="Accept"
                        Visibility="Collapsed" />
        </StackPanel>
    </RelativePanel>
</Page>
