<Page
    x:Class="SDKTemplate.FilterWholeSalerOrderCC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SDKTemplate"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:ConvertDateTimeOffsetToDateTime x:Key="ConvertDateTimeOffsetToDateTime" />
    </UserControl.Resources>
    <Grid>
        <RelativePanel Margin="10,10,0,0">
            <TextBlock x:Name="Header"
                       Text="Filter Orders"
                       Margin="0,0,0,30"
                       Style="{StaticResource SampleHeaderTextStyle}" />
            <TextBlock Text="Start Date"
                       RelativePanel.Below="Header"
                       x:Name="startDateLabel"
                       Margin="0,0,20,0"/>
            <CalendarDatePicker x:Name="startDateCP"
                                Date="{x:Bind FilterWholeSalerOrderCriteria.StartDate, Mode=TwoWay, Converter={StaticResource ConvertDateTimeOffsetToDateTime}}"
                                RelativePanel.AlignBottomWith="startDateLabel"
                                RelativePanel.RightOf="startDateLabel" />
            <TextBlock Text="End Date"
                       Margin="0,30,0,0"
                       RelativePanel.Below="startDateCP"
                       RelativePanel.AlignLeftWith="startDateLabel"
                       x:Name="endDateLabel" />
            <CalendarDatePicker x:Name="endDateCP"
                                Date="{x:Bind FilterWholeSalerOrderCriteria.EndDate, Mode=TwoWay, Converter={StaticResource ConvertDateTimeOffsetToDateTime}}"
                                RelativePanel.AlignLeftWith="startDateCP"
                                RelativePanel.AlignBottomWith="endDateLabel"
                                RelativePanel.RightOf="endDateLabel"/>
            <TextBlock Text="Due Date"
                       RelativePanel.Below="endDateLabel"
                       Margin="0,30,0,0"
                       RelativePanel.AlignLeftWith="endDateLabel"
                       x:Name="dueDateLabel" />
            <CalendarDatePicker x:Name="dueDateCP"
                                Date="{x:Bind FilterWholeSalerOrderCriteria.DueDate, Mode=TwoWay, Converter={StaticResource ConvertDateTimeOffsetToDateTime}}"
                                Margin="0,30,0,0"
                                RelativePanel.AlignLeftWith="startDateCP"
                                RelativePanel.AlignBottomWith="dueDateLabel"
                                RelativePanel.RightOf="dueDateLabel" />
            <CheckBox x:Name="PartialOrderOnlyCB"
                      Content="Partially Paid Orders Only"
                      RelativePanel.Below="dueDateLabel"
                      Margin="0,30,0,0"
                      IsChecked="{x:Bind FilterWholeSalerOrderCriteria.IncludePartiallyPaidOrdersOnly, Mode=TwoWay}"></CheckBox>
        </RelativePanel>
    </Grid>
</Page>
