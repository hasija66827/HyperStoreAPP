<Application x:Class="SDKTemplate.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:SDKTemplate"
             RequestedTheme="Light">
    <Application.Resources>
        <!-- Application-specific resources -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <Style x:Key="ListCaptionAltTextblockStyle"
                           TargetType="TextBlock"
                           BasedOn="{StaticResource CaptionTextBlockStyle}">
                        <Setter Property="FontSize"
                                Value="13" />
                        <Setter Property="Foreground"
                                Value="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                    </Style>
                    <Style x:Key="ListBodyTextBlockStyle"
                           TargetType="TextBlock"
                           BasedOn="{StaticResource BodyTextBlockStyle}">
                        <Setter Property="Foreground"
                                Value="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                    </Style>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <Style x:Key="ListCaptionAltTextblockStyle"
                           TargetType="TextBlock"
                           BasedOn="{StaticResource CaptionTextBlockStyle}">
                        <Setter Property="FontSize"
                                Value="13" />
                        <Setter Property="Foreground"
                                Value="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                    </Style>
                    <Style x:Key="ListBodyTextBlockStyle"
                           TargetType="TextBlock"
                           BasedOn="{StaticResource BodyTextBlockStyle}">
                        <Setter Property="Foreground"
                                Value="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                    </Style>
                    <Style x:Key="FormTBPropStyle"
                           TargetType="TextBlock">
                        <Setter Property="FontFamily"
                                Value="Segoe UI" />
                        <Setter Property="FontWeight"
                                Value="SemiBold" />
                        <Setter Property="FontSize"
                                Value="15" />
                        <Setter Property="TextTrimming"
                                Value="None" />
                        <Setter Property="TextWrapping"
                                Value="Wrap" />
                        <Setter Property="LineStackingStrategy"
                                Value="MaxHeight" />
                        <Setter Property="TextLineBounds"
                                Value="Full" />
                        <Setter Property="Width"
                                Value="130" />
                    </Style>
                    <Style x:Key="FormTBValueStyle"
                           TargetType="TextBlock">
                        <Setter Property="FontFamily"
                                Value="Segoe UI" />
                        <Setter Property="FontWeight"
                                Value="Normal" />
                        <Setter Property="FontSize"
                                Value="15" />
                        <Setter Property="TextTrimming"
                                Value="None" />
                        <Setter Property="TextWrapping"
                                Value="Wrap" />
                        <Setter Property="LineStackingStrategy"
                                Value="MaxHeight" />
                        <Setter Property="TextLineBounds"
                                Value="Full" />
                        <Setter Property="Width"
                                Value="150" />
                        <Setter Property="Margin"
                                Value="20,0,0,0" />
                    </Style>
                    <Style x:Key="ListHeaderTBStyle"
                           TargetType="TextBlock">
                        <Setter Property="FontFamily"
                                Value="Segoe UI" />
                        <Setter Property="FontWeight"
                                Value="Bold" />
                        <Setter Property="FontSize"
                                Value="15" />
                        <Setter Property="TextTrimming"
                                Value="None" />
                        <Setter Property="TextWrapping"
                                Value="Wrap" />
                        <Setter Property="LineStackingStrategy"
                                Value="MaxHeight" />
                        <Setter Property="TextLineBounds"
                                Value="Full" />
                        <Setter Property="Width"
                                Value="120" />
                        <Setter Property="HorizontalAlignment"
                                Value="Right" />
                    </Style>
                    <Style x:Key="ListTBStyle"
                           TargetType="TextBlock">
                        <Setter Property="FontFamily"
                                Value="Segoe UI" />
                        <Setter Property="FontWeight"
                                Value="Normal" />
                        <Setter Property="FontSize"
                                Value="15" />
                        <Setter Property="TextTrimming"
                                Value="None" />
                        <Setter Property="TextWrapping"
                                Value="Wrap" />
                        <Setter Property="LineStackingStrategy"
                                Value="MaxHeight" />
                        <Setter Property="TextLineBounds"
                                Value="Full" />
                        <Setter Property="Width"
                                Value="100" />
                        <Setter Property="HorizontalAlignment"
                                Value="Right" />
                    </Style>
                    <Style x:Key="HeaderTextBlockStyle"
                           TargetType="TextBlock">
                        <Setter Property="FontFamily"
                                Value="Segoe UI" />
                        <Setter Property="FontSize"
                                Value="20" />
                        <Setter Property="TextTrimming"
                                Value="None" />
                        <Setter Property="TextWrapping"
                                Value="Wrap" />
                        <Setter Property="LineStackingStrategy"
                                Value="MaxHeight" />
                        <Setter Property="TextLineBounds"
                                Value="Full" />
                        <Setter Property="Width"
                                Value="300" />
                        <Setter Property="Foreground"
                                Value="White" />
                        <Setter Property="HorizontalAlignment"
                                Value="Left" />
                        <Setter Property="Margin"
                                Value="5" />
                    </Style>
                    <Style x:Key="HeaderBorder"
                           TargetType="Border">
                        <Setter Property="Height"
                                Value="36"></Setter>
                        <Setter Property="Background"
                                Value="#FF6488A6" />
                        <Setter Property="Margin"
                                Value="0,0,0,10" />
                    </Style>
                    <Style x:Key="FormTextBoxStyle"
                           TargetType="TextBox">
                        <Setter Property="FontFamily"
                                Value="Segoe UI" />
                        <Setter Property="FontWeight"
                                Value="Normal" />
                        <Setter Property="FontSize"
                                Value="15" />
                        <Setter Property="TextWrapping"
                                Value="Wrap" />
                        <Setter Property="Width"
                            Value="290" />
                        <Setter Property="local:TextBoxAttached.AutoSelectable"
                                Value="True" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Left" />
                        <Setter Property="HorizontalAlignment"
                                Value="Left" />
                    </Style>
                    <Style x:Key="MediumFormTextBoxStyle"
                           TargetType="TextBox">
                        <Setter Property="FontFamily"
                                Value="Segoe UI" />
                        <Setter Property="FontWeight"
                                Value="Normal" />
                        <Setter Property="FontSize"
                                Value="15" />
                        <Setter Property="TextWrapping"
                                Value="Wrap" />
                        <Setter Property="Width"
                                Value="140" />
                        <Setter Property="Margin"
                                Value="0,0,10,0" />
                        <Setter Property="local:TextBoxAttached.AutoSelectable"
                                Value="True" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Left" />
                        <Setter Property="HorizontalAlignment"
                                Value="Left" />
                    </Style>
                    <Style x:Key="SmallFormTextBoxStyle"
                           TargetType="TextBox">
                        <Setter Property="FontFamily"
                                Value="Segoe UI" />
                        <Setter Property="FontWeight"
                                Value="Normal" />
                        <Setter Property="FontSize"
                                Value="15" />
                        <Setter Property="TextWrapping"
                                Value="Wrap" />
                        <Setter Property="Width"
                                Value="50" />
                        <Setter Property="Margin"
                                Value="0,0,5,0" />
                        <Setter Property="local:TextBoxAttached.AutoSelectable"
                                Value="True" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Left" />
                        <Setter Property="HorizontalAlignment"
                                Value="Left" />
                    </Style>
                    
                    <Style x:Key="ErrorTextBlockStyle"
                           TargetType="TextBlock">
                        <Setter Property="FontFamily"
                                Value="Segoe UI" />
                        <Setter Property="FontWeight"
                                Value="Normal" />
                        <Setter Property="Width"
                                Value="230" />
                        <Setter Property="TextAlignment"
                                Value="Right" />
                        <Setter Property="Foreground"
                                Value="Red" />
                    </Style>
                    
                    <Style x:Key="FormButtonStyle"
                           TargetType="Button">
                        <Setter Property="Foreground"
                                Value="WhiteSmoke" />
                        <Setter Property="FontWeight"
                                Value="SemiLight" />
                        <Setter Property="Width"
                                Value="140" />
                        <Setter Property="Background"
                                Value="#FF238FC7" />
                        <Setter Property="Margin"
                                Value="5" />
                    </Style>
                    
                    <Style x:Key="PositiveValueTB"
                           TargetType="TextBlock">
                        <Setter Property="FontFamily"
                                Value="Segoe UI" />
                        <Setter Property="FontWeight"
                                Value="Normal" />
                        <Setter Property="FontSize"
                                Value="16" />
                        <Setter Property="TextTrimming"
                                Value="None" />
                        <Setter Property="TextWrapping"
                                Value="Wrap" />
                        <Setter Property="LineStackingStrategy"
                                Value="MaxHeight" />
                        <Setter Property="TextLineBounds"
                                Value="Full" />
                        <Setter Property="Width"
                                Value="70" />
                        <Setter Property="TextAlignment"
                                Value="Right" />
                        <Setter Property="Foreground"
                                Value="LimeGreen" />
                    </Style>
                </ResourceDictionary>
                <ResourceDictionary x:Key="HighContrast">
                    <!-- Don't set the Foreground in high contrast theme -->
                    <Style x:Key="ListCaptionAltTextblockStyle"
                           TargetType="TextBlock"
                           BasedOn="{StaticResource CaptionTextBlockStyle}">
                        <Setter Property="FontSize"
                                Value="13" />
                    </Style>
                    <!-- Don't set the Foreground in high contrast theme -->
                    <Style x:Key="ListBodyTextBlockStyle"
                           TargetType="TextBlock"
                           BasedOn="{StaticResource BodyTextBlockStyle}" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
